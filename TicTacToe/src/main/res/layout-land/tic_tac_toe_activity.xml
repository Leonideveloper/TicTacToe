<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TicTacToeActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player1"
            android:id="@+id/scoreOfPlayer1"
            android:singleLine="true"
            android:textSize="@dimen/score_text_size"
            android:textColor="@color/player_1_score_color"
            android:layout_alignTop="@+id/gameBoardFrameLayout"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameScoreTextView"
            android:textSize="64sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="margin"
            android:id="@+id/adTextView"
            android:textSize="54sp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/adWidthTextView"
            android:layout_alignLeft="@+id/adWidthTextView"
            android:layout_alignParentTop="true"/>

    <FrameLayout
            android:id="@+id/gameBoardFrameLayout"
            android:background="@color/light_green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/scoreWidthTextView"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/adWidthTextView"
            android:layout_alignParentBottom="true">

    </FrameLayout>

    <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:id="@+id/progressBar"
            android:layout_gravity="center"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player2"
            android:id="@+id/scoreOfPlayer2"
            android:singleLine="true"
            android:textSize="@dimen/score_text_size"
            android:textColor="@color/player_2_score_color"
            android:layout_above="@+id/secondPlayerProgressBar"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:id="@+id/scoreWidthTextView"
            android:textSize="@dimen/score_text_size"
            android:textColor="@android:color/transparent"
            android:layout_above="@+id/secondPlayerProgressBar"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="@dimen/ad_width_space"
            android:layout_height="20dp"
            android:id="@+id/adWidthTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstPlayerProgressBar"
            android:indeterminate="false"
            android:background="@color/player_1_score_color"
            android:layout_below="@+id/scoreOfPlayer1"
            android:layout_alignLeft="@+id/scoreOfPlayer1"/>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondPlayerProgressBar"
            android:indeterminate="false"
            android:background="@color/player_2_score_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>

</RelativeLayout>
